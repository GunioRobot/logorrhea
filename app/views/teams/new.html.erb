<h1>New team</h1>

<%  form_for(@team) do |team_form| %>
  <%= team_form.error_messages %>

  <p>
    <%= team_form.label :name %><br />
    <%= team_form.text_field :name %>
  </p>

  <hr/>

  <h4>Add Users</h4>

  <% team_form.fields_for(:users) do |user_form| -%>
  <%= render :partial => "user_form", :locals => {:user_form => user_form} if user_form %>
  <%end%>

  <p>
    <%= team_form.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', teams_path %>